<div class="dashboard-container">
    {{!-- cool html trick the hr creates a line throughout the page --}}
        <h2 class="dashboard-title">Dashboard: Your Blog Posts</h2><hr>
        <a href="/dashboard/create-blogpost/"><button id="create-post" class="btn create-post">create post</button></a>
{{#if blogPosts.length}}
    </div>

    {{#each blogPosts as |blog|}}
        {{> blogpost-content blog}}
            <a href="/dashboard/edit-blogpost/{{blog.id}}"><button class="btn edit-post">edit post</button></a>
    {{/each}}

{{else}}
<h6 class="error-text">you do not currently have any posts</h6>

{{/if}}